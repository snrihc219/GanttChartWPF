<Window x:Class="GanttChartWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttChartWPF"
        xmlns:GanttChartControl="clr-namespace:GanttChartControl;assembly=GanttChartControl"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <ScrollViewer x:Name="sv">
            <GanttChartControl:OperationMonitorChartPageControl 
                x:Name="chart" HeaderTimeTitle="时间" LineChartTitle="术中监测"
                GanttItemsSourceHeader="{Binding TimeItemModels}"
                GanttItemsSourceTree="{Binding GanttProjectModel}"
                ProjectGroupInfo="{Binding ProjectInfoList}" 
                Y1AxisScale="{Binding Y1AxisScale}" 
                Y1AxisScaleTitle="{Binding Y1AxisScaleTitle}" 
                Y2AxisScale="{Binding Y2AxisScale}" 
                Y2AxisScaleTitle="{Binding Y2AxisScaleTitle}"  
                LineRowsItem="{Binding LineRowsItem}"
                LineServiceData="{Binding LineServiceList}" >
            </GanttChartControl:OperationMonitorChartPageControl>
        </ScrollViewer>
        
        <Button Content="Button" Click="Button_Click" HorizontalAlignment="Left" Margin="1108,292,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
    
</Window>
