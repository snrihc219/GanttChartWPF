<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GanttChartControl">
    <Style TargetType="{x:Type local:GanttChartGridControl}">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:GanttChartGridControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid x:Name="gd" HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Border BorderThickness="1,1,1,0" Grid.ColumnSpan="2" Width="{Binding ElementName=gd,Path=ActualWidth}" 
                                    BorderBrush="Black" VerticalAlignment="Bottom" Height="17">
                                
                            </Border>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                                       Text="{Binding HeaderTitle,RelativeSource={RelativeSource AncestorType={x:Type local:GanttChartGridControl}}}"/>
                            <local:TimeHeaderControl Grid.Column="1" VerticalAlignment="Bottom" 
                                                     HorizontalAlignment="Left" 
                                                     ItemsSource="{Binding GanttItemsSourceHeader,RelativeSource={RelativeSource AncestorType={x:Type local:GanttChartGridControl}}}">
                                <local:TimeHeaderControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock Text="{Binding TimeName,StringFormat='hh:mm'}"></TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </local:TimeHeaderControl.ItemTemplate>
                            </local:TimeHeaderControl>
                            <local:ProjectTreeControl Grid.Row="1" 
                                                      ItemsSource="{Binding GanttItemsSourceTree.Children,RelativeSource={RelativeSource AncestorType={x:Type local:GanttChartGridControl}}}">
                                <local:ProjectTreeControl.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <Grid>
                                            <TextBlock TextWrapping="Wrap" 
                                                       Text="{Binding ProjectName}"/>
                                        </Grid>
                                    </HierarchicalDataTemplate>
                                </local:ProjectTreeControl.ItemTemplate>
                            </local:ProjectTreeControl>
                            <local:RowsGridPresenter Grid.Column="1" Grid.Row="1" IsGanttChart="True" 
                                                     GanttColumnsItem="{Binding GanttColumnsItem,RelativeSource={RelativeSource AncestorType={x:Type local:GanttChartGridControl}}}" 
                                                     LineRowsItem="{Binding GanttRowsItem,RelativeSource={RelativeSource AncestorType={x:Type local:GanttChartGridControl}}}"/>

                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
    
</ResourceDictionary>